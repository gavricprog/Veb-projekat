@model List<Veb_projekat.Models.Therapy>

<h2>Terapije</h2>

@if (Model.Count > 0)
{
    <ul>
        @foreach (var therapy in Model)
        {
            <li>@therapy.Description</li>
        }
    </ul>
}
else
{
    <p>Nema dostupnih terapija za ovog pacijenta.</p>
}
<p>
    <a href="@Url.Action("Index")" class="btn btn-primary">Nazad na termine</a>
</p>
